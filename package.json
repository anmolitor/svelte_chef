{
	"name": "svelte-chef",
	"version": "0.0.1",
	"scripts": {
		"dev": "dotenv -e .env.local -- vite dev",
		"build": "vite build",
		"preview": "dotenv -e .env.prod vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test:e2e": "playwright test",
		"test": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:migrate": "dotenv -e .env.local -- dbmate --env POSTGRES_URL_NON_POOLING up",
		"db:rollback": "dotenv -e .env.local -- dbmate --env POSTGRES_URL_NON_POOLING rollback"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^1.0.0-next.90",
		"@sveltejs/kit": "^1.0.0-next.587",
		"@types/cookie": "^0.5.1",
		"dbmate": "^2.11.0",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"typescript": "^4.9.3",
		"vercel": "^33.5.0",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"pg": "^8.11.3"
	}
}
